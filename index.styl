body
  margin 0
  padding 0
  font-family Helvetica
  & *:hover
    cursor default

h3
  text-align center
  text-transform uppercase
  margin-top 7%
  &:after
    content "â„¢"
    position absolute
    font-size 60%

#myForm
  display: flex
  flex-direction: column
  width 600px
  justify-content flex-start
  margin 0 auto
  color darkgrey
  margin-bottom 10px
input
  outline none
  border none
  border-bottom 1px solid darkgrey
  color grey
  font-size 120%
  text-align center
  overflow hidden
  box-sizing content-box
  &:focus
    outline 1px solid #ffcc00
    border-color rgba(0,0,0,0)
  &:hover
    cursor text
      
.label
  text-align center
  margin-bottom 10px
  margin-top 2px
#submitButton
  margin-top 20px
  font-size 100%
  height 60px
  background-color #ffcc00
  border none
  outline none
  font-weight 600
  &:hover
    cursor pointer
  &:active
    color red
    font-size 98%
  &:disabled
    background-color darkgrey
    cursor not-allowed
    
 #myForm .error
   border 1px solid red
   
 #resultContainer
   margin 0 auto
   width 600px
   height 50px
   text-align center
   margin-bottom 10px
   display flex
   flex-direction column
   justify-content center
   &.success
     color green
   &.error
     color red
   &.progress
     color black
     animation blinking .5s linear alternate infinite
   
 #resultContainer.success
   color green
   
 #resultContainer.error
   color red

@keyframes blinking {
    from {opacity: 1}
    to {opacity: 0.3}
}
 
#controlsContainer
  margin 0 auto
  height auto
  width 600px
  background whitesmoke
  position relative
  display flex
  flex-wrap wrap
  justify-content center
  
.controlElement
  display flex
  min-height 200px
  width 285px
  flex-direction column
  align-items center
  color black
  justify-content center
  position relative
  &__heading
    top 0
    position absolute
    font-weight 600
    text-transform uppercase
    font-size 80%
    margin-bottom 5px
    margin-top 25px
    
.buttonContainer
  width 200px
  position relative
  overflow hidden
  border-radius 8px
  &__button
    text-align center
    border none
    width 100%
    background white
    outline none
    font-size 15px
    transition .2s
    &:active
      outline none
      background #fc0
    &:hover
      cursor pointer
      background #fffaea
    &--single:active
      color red
    &--single:hover
      background #fc0
    &--active
      background #fc0
      &:hover
        background #fc0
      &:active
        background #e0b300

#setData input, #setData .pseudo
  width auto
  background none
  font-size 11px
  font-family monospace
  
#setData>.wrapper
  margin-bottom 5px
  &>*
    display inline
  
.tip
  width 100%
  margin 5px
  font-size 12px
  text-align center
  opacity 0.4